from flask import Flask, render_template   <----- html 파일을 main.py 로 보내기 위해 render_template를 import함.

app = Flask("SuperScrapper")

@app.route("/")
def home():
  return render_template("potato.html")  <----- 쨔잔

@app.route("/<username>")
def potato(username):
  return f"Hello {username} how are you doing"


app.run(host="0.0.0.0")




